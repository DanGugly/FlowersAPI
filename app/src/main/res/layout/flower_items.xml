<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/flower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_available_name">
        </TextView>
        <TextView
            android:id="@+id/flower_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_available_category">
        </TextView>
        <TextView
            android:id="@+id/flower_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_available_price">
        </TextView>
        <TextView
            android:id="@+id/flower_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_available_photo">
        </TextView>
        <TextView
            android:id="@+id/flower_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_available_instructions">
        </TextView>
        <TextView
            android:id="@+id/flower_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_available_id">
        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>